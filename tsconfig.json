{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@react/*": ["src/custom_modules/react/*"],
      "@router/*": ["src/custom_modules/router/*"],
      "@redux/*": ["src/custom_modules/redux/*"],
      "@storage/*": ["src/custom_modules/storage/*"],
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2015"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [".", "src/**/*", "./types", "declaration.d.ts", "global.d.ts"]
}
